---
import HeaderImage from "./HeaderImage.astro";
import TitleSubtitle from "./TitleSubtitle.astro";
import BorderContent from "./BorderContent.astro";
import type { ClientModel } from "../interfaces/ClientModel";

interface Props {
  clients: ClientModel[];
}

const { clients } = Astro.props;
---

<BorderContent>
  <div class="flex flex-col gap-6 bg-grid bg-grid-size px-6">
    <h3 class="text-4xl font-bold mt-6 text-orange-500">Saiba mais</h3>
    <ul class="flex gap-12 overflow-auto py-6">
      {
        clients.map((client) => {
          const { data } = client;

          return (
            <li class="min-w-[50vw] lg:min-w-[50vw] h-[30vh]">
              <a href={data.slug}>
                <HeaderImage
                  src={data.imagemPaginaPrincipal.src}
                  alt={data.detalhamentoImagemPrincipal.alt}
                >
                  <div slot="title-subtitle">
                    <TitleSubtitle
                      title={data.nome}
                      subtitle={data.descricao}
                    />
                  </div>
                </HeaderImage>
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</BorderContent>
