---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  text: string;
  big?: boolean;
}

const { name, text, big } = Astro.props;
---

<div
  class={`flex items-center gap-3 cursor-pointer ${big ? "text-5xl" : "text-2xl"}`}
>
  <button>
    <Icon name={name} />
  </button>
  <p id="menu-text">{text}</p>
</div>
