---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  text: string;
  big?: boolean;
  isDark?: boolean;
}

const { name, text, big, isDark } = Astro.props;
---

<div
  class={`${isDark ? "text-stone-200" : "text-stone-800"} flex items-center gap-3 cursor-pointer ${big ? "text-5xl" : "text-2xl"}`}
>
  <button>
    <Icon name={name} />
  </button>
  <p>{text}</p>
</div>
