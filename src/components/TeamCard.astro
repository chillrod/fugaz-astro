---
import { Image } from "astro:assets";

const { src, name, desc, role } = Astro.props;
---

<li class="font-serif min-w-[50vw] md:min-w-[30vw]">
  <Image src={src} alt={name} class="w-full h-[30vw]" />
  <h1 class="font-bold text-2xl">{name}</h1>
  <span class="text-xl text-orange-500">{role}</span>
  <p class="max-w-[30vw]">{desc}</p>
</li>
