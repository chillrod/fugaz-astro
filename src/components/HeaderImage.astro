---
import { Image } from "astro:assets";

const { src, alt = "" } = Astro.props;
---

<div
  class="h-full w-[100%] grid grid-rows-2 grid-cols-2 relative cursor-pointer overflow-hidden"
>
  <div class="self-end z-30 p-6 absolute bottom-0">
    <slot name="title-subtitle" />
  </div>
  <Image
    src={src}
    alt={alt}
    class="absolute h-full object-cover ease-in duration-200 hover:scale-105"
  />
</div>
