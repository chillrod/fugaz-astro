---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import HeaderImages from "../components/HeaderImages.astro";
import MenuIcon from "../components/MenuIcon.astro";
import BorderContent from "../components/BorderContent.astro";
import { clients } from "../data/clients";
import { summarys } from "../data/summarys";

import Picture1 from "../assets/picture6.jpeg";
import Picture2 from "../assets/picture7.jpeg";
import Picture3 from "../assets/picture10.jpeg";
import { Icon } from "astro-icon/components";
---

<Layout title="Fugaz & Co.">
  <div class="text-stone-800">
    <main class="flex flex-col gap-12">
      <div class="text-stone-800">
        <h1
          class="text-center font-serif text-[35vw] md:text-[21vw] -tracking-widest leading-[1.5ch]"
        >
          Fugaz & Co.
        </h1>
        <div class="text-right text-[2vw]">
          <span>Consultoria gastronomica personalizada.</span>
        </div>
      </div>
    </main>

    <section id="#headerimages">
      <BorderContent>
        <HeaderImages />
      </BorderContent>
    </section>

    <section id="clients" class="font-serif">
      <BorderContent>
        <h2 class="text-center text-[7vw] -tracking-wider leading-[1.5ch]">
          Clientes.
        </h2>
        <ul class="flex items-center gap-6 overflow-auto py-6">
          {
            clients.map((client, id) => (
              <li class="text-center text-[8vw] bg-orange-600 text-stone-200">
                <a href={client.name} target="_blank">
                  {client.name}
                </a>
              </li>
            ))
          }
        </ul>
        <div class="h-[40vh]">
          <Image
            src={Picture1}
            alt="Consultoria"
            class="w-full h-full object-cover"
          />
        </div>
      </BorderContent>
    </section>

    <section id="services">
      <BorderContent>
        <div class="grid gap-12">
          <div class="order-2 flex flex-col gap-12">
            <h2
              class="text-center font-serif text-[7vw] -tracking-wider leading-[1.5ch]"
            >
              Nossa atuação.
            </h2>
            <div class="flex gap-6 flex-col justify-center text-center">
              {
                summarys.map((summary) => (
                  <div class="flex items-center gap-2 justify-center">
                    {/* <Icon
                    name="ant-design:arrow-right-outlined"
                    class="text-2xl"
                  /> */}
                    <details class="text-4xl font-serif">
                      <summary class="cursor-pointer">{summary.title}</summary>
                      <p class="text-2xl">{summary.text}</p>
                    </details>
                  </div>
                ))
              }
            </div>
          </div>
          <div class="grid grid-cols-2 grid-rows-1 gap-6 h-[50vh]">
            <div class="cols-span-1 h-full">
              <Image
                src={Picture3}
                alt="Consultoria"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="grid cols-span-2 grid-cols-1 grid-rows-2 gap-6">
              <Image
                src={Picture2}
                alt="Consultoria"
                class="w-full h-full object-cover"
              />
              <Image
                src={Picture1}
                alt="Consultoria"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </BorderContent>
    </section>

    <section id="contact">
      <BorderContent>
        <div class="flex flex-col gap-6">
          <h2
            class="text-center font-serif text-[7vw] -tracking-wider leading-[1.5ch]"
          >
            Entre em contato
          </h2>
          <div class="text-3xl text-center flex justify-center gap-6">
            <a
              href="mailto:fugazconsultoria@gmail.com?subject=Estou interessado em saber mais sobre a Fugaz &body=Olá, Fugaz"
            >
              <MenuIcon
                name="ant-design:mail-filled"
                text="Envie-nos um Email."
              />
            </a>
            <a
              href="https://www.instagram.com/fugaz.consultoria/"
              target="_blank"
            >
              <MenuIcon name="ant-design:instagram" text="Instagram" />
            </a>
          </div>
        </div>
      </BorderContent>
    </section>
  </div>

  <style>
    details > summary {
      /* list-style: none; */
    }
  </style>
</Layout>
