---
import { ViewTransitions } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
import MenuIcon from "../components/MenuIcon.astro";
import Footer from "../components/Footer.astro";
import KnowMoreClients from "../components/KnowMoreClients.astro";
import BorderContent from "../components/BorderContent.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const { client } = Astro.params;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Fugaz & Co." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Navbar page={client}>
      <div slot="menu">
        <a href="/#clients">
          <MenuIcon big name="ant-design:close-circle-filled" />
        </a>
      </div>
    </Navbar>
    <BorderContent>
      <slot />
    </BorderContent>
    <KnowMoreClients />
    <Footer />
    <style is:global>
      :root {
        background-color: theme("colors.stone.100");
        padding: theme("spacing.4");
      }
    </style>
  </body>
</html>
